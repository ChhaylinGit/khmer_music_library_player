<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:id="@+id/cardviewPlayerMain"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:clickable="true"
        android:focusable="true"
        card_view:cardCornerRadius="3dp"
        card_view:cardMaxElevation="1dp"
        card_view:cardElevation="1dp"
        card_view:cardPreventCornerOverlap="false"
        card_view:cardUseCompatPadding="true"
        android:animateLayoutChanges="true"
        android:foreground="?android:attr/selectableItemBackground">
        <LinearLayout
            android:id="@+id/linearlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp">
                <TextView
                    android:id="@+id/textViewStartDuration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="02:00"
                    android:layout_marginLeft="5dp"/>
                <SeekBar
                    android:id="@+id/seekBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:thumbTint="@color/colorPrimary"
                    android:progressBackgroundTint="@color/colorPrimary"
                    android:progressTint="@color/colorPrimary"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/textViewEndDuration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="02:00"
                    android:layout_marginRight="5dp"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardview"
                    android:layout_width="60dp"
                    android:layout_height="70dp"
                    app:cardCornerRadius="5dp"
                    android:layout_marginBottom="5dp">
                    <ImageView
                        android:id="@+id/imgSingerProfile"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@mipmap/default_image"
                        android:scaleType="fitXY"/>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:id="@+id/linearlayoutTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/cardview">
                    <TextView
                        android:id="@+id/textViewMusicTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/khmer_os_battambang"
                        android:textSize="15sp"
                        android:text="មួយរាត្រីនឹកតែអូន"
                        android:textColor="@color/colorBlack"
                        android:layout_marginTop="5dp"/>
                    <TextView
                        android:id="@+id/textViewSinger"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/khmer_os_battambang"
                        android:textSize="12sp"
                        android:text="ច្រៀងដោយ៖ ហួល ឡាវី"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true">
                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        app:fabSize="mini"
                        app:borderWidth="0dp"
                        app:elevation="0dp"
                        android:backgroundTintMode="screen"
                        android:backgroundTint="@color/colorGray"
                        android:clickable="true"
                        android:id="@+id/btnPrevious"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_baseline_skip_previous_24"
                        android:layout_marginRight="5dp"/>
                    <FrameLayout
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="5dp">
                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            app:fabSize="mini"
                            app:borderWidth="0dp"
                            app:elevation="0dp"
                            android:scaleType="fitCenter"
                            android:backgroundTintMode="screen"
                            android:backgroundTint="@color/colorGray"
                            android:clickable="true"
                            android:id="@+id/btnPlay"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_baseline_play_arrow_24" />
                        <ProgressBar
                            android:id="@+id/progressBarPlayer"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:indeterminateTint="@color/colorPrimary"
                            android:layout_gravity="center"
                            android:visibility="gone"/>
                    </FrameLayout>

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        app:fabSize="mini"
                        app:borderWidth="0dp"
                        app:elevation="0dp"
                        android:backgroundTintMode="screen"
                        android:backgroundTint="@color/colorGray"
                        android:clickable="true"
                        android:id="@+id/btnNext"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_baseline_skip_next_24"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/imgSingerProfileMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/default_image"
        app:civ_border_color="@color/colorWhite"
        app:civ_border_width="6dp"
        app:civ_shadow="true"
        app:civ_shadow_radius="10"
        app:civ_shadow_color="@color/colorPrimary"
        android:layout_below="@id/cardviewPlayerMain"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgSingerProfileMain">
        <TextView
            android:id="@+id/textViewMusicTitleMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="មួយរាត្រីនឹកតែអូន"
            android:fontFamily="@font/khmer_os_battambang"
            android:textColor="@color/colorBlack"
            android:textSize="22sp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_below="@id/imgSingerProfileMain"/>
    </LinearLayout>
</RelativeLayout>

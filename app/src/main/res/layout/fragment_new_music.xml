<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.Tab1.NewMusicFragment">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/cardviewMain">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewMusic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">
        </androidx.recyclerview.widget.RecyclerView>
        <LinearLayout
            android:id="@+id/linearlayoutWaitLoadMusic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">
            <ProgressBar
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:theme="@style/ProgressBarLoadMusic"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/loading_music"
                android:textSize="15sp"
                android:fontFamily="@font/khmer_os_battambang"/>
        </LinearLayout>
    </FrameLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardviewMain"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:clickable="true"
        android:focusable="true"
        card_view:cardCornerRadius="3dp"
        card_view:cardMaxElevation="1dp"
        card_view:cardElevation="1dp"
        card_view:cardPreventCornerOverlap="false"
        card_view:cardUseCompatPadding="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:visibility="gone">
    <LinearLayout
        android:id="@+id/linearlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp">
            <TextView
                android:id="@+id/textViewStartDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="02:00"
                android:layout_marginLeft="5dp"/>
            <SeekBar
                android:id="@+id/seekBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:thumbTint="@color/colorPrimary"
                android:progressBackgroundTint="@color/colorPrimary"
                android:progressTint="@color/colorPrimary"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/textViewEndDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="02:00"
                android:layout_marginRight="5dp"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">
            <androidx.cardview.widget.CardView
                android:id="@+id/cardview"
                android:layout_width="60dp"
                android:layout_height="70dp"
                app:cardCornerRadius="5dp"
                android:layout_marginBottom="5dp">
                <ImageView
                    android:id="@+id/imgSingerProfile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@mipmap/default_image"
                    android:scaleType="fitXY"/>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/linearlayoutTitle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/cardview">
                <TextView
                    android:id="@+id/textViewMusicTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/khmer_os_battambang"
                    android:textSize="15sp"
                    android:text="មួយរាត្រីនឹកតែអូន"
                    android:textColor="@color/colorBlack"
                    android:layout_marginTop="5dp"/>
                <TextView
                    android:id="@+id/textViewSinger"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/khmer_os_battambang"
                    android:textSize="12sp"
                    android:text="ច្រៀងដោយ៖ ហួល ឡាវី"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true">
                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    app:fabSize="mini"
                    app:borderWidth="0dp"
                    app:elevation="0dp"
                    android:backgroundTintMode="screen"
                    android:backgroundTint="@color/colorGray"
                    android:clickable="true"
                    android:id="@+id/btnPrevious"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/previous_96"
                    android:layout_marginRight="5dp"/>
                <FrameLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="5dp">
                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        app:fabSize="mini"
                        app:borderWidth="0dp"
                        app:elevation="0dp"
                        android:scaleType="fitCenter"
                        android:backgroundTintMode="screen"
                        android:backgroundTint="@color/colorGray"
                        android:clickable="true"
                        android:id="@+id/btnPlay"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/play_96px"/>
                    <ProgressBar
                        android:id="@+id/progressBarPlayer"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:indeterminateTint="@color/colorPrimary"
                        android:layout_gravity="center"
                        android:visibility="gone"/>
                </FrameLayout>

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    app:fabSize="mini"
                    app:borderWidth="0dp"
                    app:elevation="0dp"
                    android:backgroundTintMode="screen"
                    android:backgroundTint="@color/colorGray"
                    android:clickable="true"
                    android:id="@+id/btnNext"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/next_96"/>
            </LinearLayout>
        </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <com.example.jean.jcplayer.view.JcPlayerView
        android:id="@+id/jcPlayerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:seek_bar_color="@color/colorPrimary"
        app:text_audio_title_color="@color/colorPrimary"
        app:text_audio_duration_color="@color/colorPrimary"
        app:text_audio_current_duration_color="@color/colorPrimary"
        app:repeat_one_icon_color="@color/colorPrimary"
        app:repeat_icon_color="@color/colorPrimary"
        app:random_icon_color="@color/colorPrimary"
        app:progress_color="@color/colorPrimary"
        app:previous_icon_color="@color/colorPrimary"
        app:play_icon_color="@color/colorPrimary"
        app:pause_icon_color="@color/colorPrimary"
        app:next_icon_color="@color/colorPrimary"
        android:outlineSpotShadowColor="@color/colorPrimary"
        android:visibility="gone"/>
</RelativeLayout>